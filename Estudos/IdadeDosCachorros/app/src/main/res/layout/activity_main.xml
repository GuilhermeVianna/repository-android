<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="idadedoscachorros.cursoandroid.com.idadedoscachorros.MainActivity"
    android:background="#ffe085">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:background="@drawable/dog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/caixaTextoIdadeId"
        android:background="#57351d"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/botaoDescobrirId"
        android:layout_alignStart="@+id/botaoDescobrirId"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/botaoDescobrirId"
        android:layout_alignEnd="@+id/botaoDescobrirId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Digite a idade do seu cachorro, para saber a idade dele em humanos:"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="#675243"
        android:background="#ffffff"
        android:padding="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descobrir_idade"
        android:id="@+id/botaoDescobrirId"
        android:layout_below="@+id/caixaTextoIdadeId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/resultadoIdadeId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#675243"
        android:textAlignment="center"
        android:textSize="25sp"
        android:visibility="invisible"
        android:background="#ffffff"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/botaoDescobrirId" />
</RelativeLayout>
